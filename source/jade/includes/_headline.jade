      div.headline-socials
         //- Dribbble link
         a.headline-socials__link.fadeInUp( href="https://dribbble.com/astorino_mattia" target="_blank" )
            svg.headline__social-icon.dribbble: use( xlink:href="#source--icons--dribbble" )
         //- Twitter link
         a.headline-socials__link.fadeInUp( href="https://twitter.com/MattiaAstorino" target="_blank" )
            svg.headline__social-icon.twitter: use( xlink:href="#source--icons--twitter" )
         //- GitHub link
         a.headline-socials__link.fadeInUp( href="https://github.com/equinusocio" target="_blank" )
            svg.headline__social-icon.github: use( xlink:href="#source--icons--github" )
