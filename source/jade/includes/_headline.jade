   div.info( itemscope itemtype="http://schema.org/Person" )
      //- Headinline title
      h1.headline__title.fadeInDown( itemprop="name" )
         |MATTIA 
         strong ASTORINO
      //- Headline subtitle
      h2.headline__subtitle.fadeInDown( itemprop="jobTitle" )
         |WEB DESIGNER
         span.headline__mark  & 
         |DEVELOPER
